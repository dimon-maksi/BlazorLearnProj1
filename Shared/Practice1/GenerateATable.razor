<div class="table-responsive">
	<table class="table table-striped">
		<thead class="thead-light">
			<tr>
				<th>Some numbers</th>
				<th>Some text</th>
				<th><span class="oi oi-check" aria-hidden="true"></span></th>				
			</tr>
		</thead>
		<tbody>
			@if (CountOfRow == 0)
			{
				<tr>
					<th>No numbers</th>
					<th>No text</th>
					<th>No buttons</th>	
				</tr>
			}
			else
			{
				@for (int i = 0; i < CountOfRow; i++)
				{
					<GenerateARow/>
				}
			}
		</tbody>
	</table>
</div>

@code {
	[Parameter] public int CountOfRow { get; set; } = 0;
}
